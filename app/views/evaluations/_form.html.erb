<%= form_with(model: evaluation, local: true) do |form| %>
  <% if evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
      <% evaluation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :test_id %>
    <%= form.select :test_id, options_from_collection_for_select(@tests, :id, :content), id: :evaluation_test_id %>
  </div>

  <div class="field">
    <%= form.label :member_id %>
    <%= form.select :member_id, options_from_collection_for_select(@members, :id, :to_s), id: :evaluation_member_id %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.text_field :score, id: :evaluation_score %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
